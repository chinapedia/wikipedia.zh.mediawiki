 |title        = Astrogeologic studies. Annual progress report
 |author       = Wilhelms, D.; Morris E. C.
 |series       = Geology of the Julius Caesar and Mare Vaporum Quadrangles
 |publisher    = USGS, Department of the Interior
 |date         = 1965–1966
 |pages        = 51–62
 |url          = http://ntrs.nasa.gov/archive/nasa/casi.ntrs.nasa.gov/19670022605.pdf
 |access-date  = 2016-04-24
 |archive-date = 2017-02-21
 |archive-url  = https://web.archive.org/web/20170221195838/https://ntrs.nasa.gov/archive/nasa/casi.ntrs.nasa.gov/19670022605.pdf
 |dead-url     = no
