 |archive-date = 2021-05-22
 |archive-url  = https://web.archive.org/web/20210522210318/https://www.phoronix.com/scan.php?page=article&item=nvidia_180_vdpau&num=1
}}</ref><ref>{{cite web
 |url          = http://www.phoronix.com/scan.php?page=article&item=nvidia_vdpau&num=1
 |title        = NVIDIA VDPAU Benchmarks
 |accessdate   = 2009-03-13
