 |title           = Mass segregation in M67 with 2MASS
 |url             = http://www.aanda.org/articles/aa/pdf/2003/26/aah4157.pdf
 |journal         = [[Astronomy_and_Astrophysics|Astronomy and Astrophysics]]
 |volume          = 405
 |pages           = 525
 |bibcode         = 2003A&A...405..525B
 |doi             = 10.1051/0004-6361:20030205
 |issue           = 2
 |doi-access      = free
