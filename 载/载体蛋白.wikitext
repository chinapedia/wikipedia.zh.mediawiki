 |title       = Advanced Biology
 |publisher   = Oxford University Press US
 |year        = 2000
 |ISBN        = 0199141959
 |pages       = 157-158
 |url         = http://www.truthinscience.org.uk/tis2/index.php/textbook-reviews-mainmenu-67/75-advanced-biology-kent.html
