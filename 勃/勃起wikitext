|publisher  = Oxford University Press
 |year          = 2012
|pages      = 575—581
|isbn          = 978-0199544646
}}</ref><ref name="Reece">{{cite book
 |author         =  William O. Reece
 |title      = Functional Anatomy and Physiology of Domestic Animals 
 |url        = https://books.google.com.ua/books?id=naSWWxJLcd0C&lpg=PA440&ots=QRAnn9eUOh&dq=animals%20Penile%20erection&hl=ru&pg=PA448#v=onepage&q=animals%20Penile%20erection&f=false
|publisher    = {Lippincott Williams & Wilkins
 |year           = 2004
|pages      = 430—460
