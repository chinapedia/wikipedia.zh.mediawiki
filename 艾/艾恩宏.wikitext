 |work         = Luxner News
 |archive-url  = https://web.archive.org/web/20160909195309/http://luxner.com/cgi-bin/view_article.cgi?articleID=1604
 |archive-date = 2016-09-09
 |dead-url     = yes
}}</ref><ref>
{{cite news 
 |accessdate=2008-10-30 
 |date=2007-10-11 
 |first=Jacob 
 |last=Berkman 
 |title=Overshadowed by China, a few Jews still hold on in Taiwan 
