 |first       = Bill
 |last        = Rea
 |work        = King Township Sentinel
 |location    = King City, Ontario
 |date        = April 23, 2008
 |url         = http://www.kingsentinel.com/news/2008-04-23/news/003.html
 |accessdate  = January 9, 2012
