| {{script|Cyrs|[[А|А]]}} || {{script|Cyrs|[[Б|Б]]}} || {{script|Cyrs|[[В|В]]}} || {{script|Cyrs|[[Г|Г]]}} || {{script|Cyrs|[[Д|Д]]}} || {{script|Cyrs|[[Е|Е]]}} || {{script|Cyrs|[[Ж|Ж]]}} || {{script|Cyrs|[[Ѕ|Ѕ]]}}<ref>变体形式为{{script|Cyrs|Ꙃ}}</ref> || {{script|Cyrs|[[Ꙁ|Ꙁ]]}} || {{script|Cyrs|[[И|И]]}} || {{script|Cyrs|[[І|І]]}} || {{script|Cyrs|[[К|К]]}} || {{script|Cyrs|[[Л|Л]]}} || {{script|Cyrs|[[М|М]]}} || {{script|Cyrs|[[Н|Н]]}} || {{script|Cyrs|[[О|О]]}} || {{script|Cyrs|[[П|П]]}} || {{script|Cyrs|[[Р|Р]]}} || {{script|Cyrs|[[С|С]]}} || {{script|Cyrs|[[Т|Т]]}} || {{script|Cyrs|[[Ѹ|Ѹ]]}}<ref>变体形式为{{script|Cyrs|Ꙋ}}</ref> || {{script|Cyrs|[[Ф|Ф]]}}
