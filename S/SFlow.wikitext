 | url = http://www.sflow.org/
 | title = sFlow.org - Making the Network Visible
 | publisher = sFlow.org
 | accessdate = 2016-03-09
 | archive-date = 2016-03-08
 | archive-url = https://web.archive.org/web/20160308061228/http://www.sflow.org/
