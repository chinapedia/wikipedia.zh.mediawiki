 |title=Operation Deadlight
 |last1=Waller
 |first1=Derek
 |website=German U-boats of WWII - uboat.net
 |accessdate=7 November 2010
 |archive-date=2010-11-12
 |archive-url=https://web.archive.org/web/20101112011008/http://www.uboat.net/articles/84.html
