/%e6%b8%af%e8%81%9e/article/20220309/s00001/1646824811538/%e6%b8%af%e5%8f%b0%e5%85%bc%e8%81%b7%e8%a8%98%e8%80%85%e8%97%8f%e7%8e%a9%e5%85%b7%e6%a7%8d%e6%8e%a1%e8%a8%aa%e8%ad%a6%e6%a0%a1%e7%bd%aa%e8%84%ab-%e5%ae%98-%e5%8f%af%e7%96%91%e4%bd%86%e6%9c%aa%e8%83%bd%e8%ad%89%e7%8a%af%e7%bd%aa%e7%9b%ae%e7%9a%84 |accessdate=2022-03-09 |work=明報 |date=2022-03-09 |archive-date=2022-03-28 |archive-url=https://web.archive.org/web/20220328131237/https://news.mingpao.com/ins/%e6%b8%af%e8%81%9e/article/20220309/s00001/1646824811538/%e6%b8%af%e5%8f%b0%e5%85%bc%e8%81%b7%e8%a8%98%e8%80%85%e8%97%8f%e7%8e%a9%e5%85%b7%e6%a7%8d%e6%8e%a1%e8%a8%aa%e8%ad%a6%e6%a0%a1%e7%bd%aa%e8%84%ab-%e5%ae%98-%e5%8f%af%e7%96%91%e4%bd%86%e6%9c%aa%e8%83%bd%e8%ad%89%e7%8a%af%e7%bd%aa%e7%9b%ae%e7%9a%84 |dead-url=no }}</ref>

