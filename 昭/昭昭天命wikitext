}}</ref><ref>{{cite book
| author = 祝田秀全
| title = 超世界史
| url = https://books.google.com/books?id=tIPxDwAAQBAJ&pg=PA230
| publisher = 易博士
| date = 2020年7月16日
| isbn = 9789864801237
| page = 230
| access-date = 2022年1月7日
