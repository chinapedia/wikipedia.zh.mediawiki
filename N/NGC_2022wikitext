 | constellation = [[獵戶座|獵戶座]]
 | epoch     = [[J2000|J2000]]
 | ra        = {{RA|05|42|06.19056}}<ref name=GaiaDR2/>
 | dec       = {{DEC|+09|05|10.5843}}<ref name=GaiaDR2/>
 | dist_ly   = {{Convert|2.518|kpc|kly|order=flip|abbr=on|lk=on}}<ref name=Stanghellini2008/>
 | appmag_v  = 11.6<ref name=Finlay2006/>
 | size_v    = {{Val|28|u=arcsecond}}<ref name=Finlay2006/>
 | radius_ly = {{Convert|0.100|±|0.012|pc|ly|disp=out|abbr=on}}<ref name=Sabbadin1984/>
 | absmag_v  = 
 | notes     = 雙殼
 | names     = PK 196-10 1、 IRAS 05393+0903<ref name="simbad" />
