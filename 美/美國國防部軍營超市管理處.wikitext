 |archivedate = 2012-09-13
}}</ref><ref name="xinhuanet"></ref><ref name="xinhuanet">{{Cite web |url=http://news.xinhuanet.com/mil/2013-01/07/c_124194754.htm |title=物美價廉的美軍超市 - 新華軍事 - 新華網 |access-date=2016-05-18 |archive-date=2013-01-27 |archive-url=https://web.archive.org/web/20130127033929/http://news.xinhuanet.com/mil/2013-01/07/c_124194754.htm |dead-url=no }}</ref>

