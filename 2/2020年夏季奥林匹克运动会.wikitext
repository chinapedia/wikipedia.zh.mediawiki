2021-05-14 |archive-url=https://web.archive.org/web/20210514104258/https://news.mingpao.com/ins/%e9%ab%94%e8%82%b2/article/20210506/s00006/1620300995671/%e6%9d%b1%e4%ba%ac%e5%a5%a7%e9%81%8b-%e8%bc%9d%e7%91%9e%e7%b0%bd%e7%b4%84%e8%b4%88%e5%9c%8b%e9%9a%9b%e5%a5%a7%e5%a7%94%e6%9c%83%e7%96%ab%e8%8b%97-%e5%b7%b4%e8%b5%ab%e9%a0%90%e6%9c%9f%e5%90%84%e5%9c%8b%e4%bb%a3%e8%a1%a8%e5%9c%98%e5%85%ad%e6%88%90%e4%ba%ba%e6%8e%a5%e7%a8%ae |dead-url=no }}</ref>。

