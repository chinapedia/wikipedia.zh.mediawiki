 |title=TOPKAPI PALACE-REPUBLIC OF TURKEY MINISTRY OF CULTURE AND TOURISM 
 |publisher=topkapisarayi.gov.tr 
 |language=en 
 |accessdate=2009-02-10 
 |deadurl=yes 
 |archiveurl=https://web.archive.org/web/20080801031049/http://www.topkapisarayi.gov.tr/eng/divan_meydani.html 
