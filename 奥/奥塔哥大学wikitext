 |accessdate  = 23 May 2010
 |deadurl     = yes
 |archiveurl  = https://web.archive.org/web/20090313074458/http://www.ch9.co.nz/content/norml-dissapointed-university%2526%2523039%3Bs-change-heart
 |archivedate = 2009年3月13日
}}</ref><ref>{{cite news
 |url          = http://www.odt.co.nz/on-campus/university-otago/14019/university-stays-mum-over-trespass-orders
