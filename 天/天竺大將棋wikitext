|-
|   || style="background: pink" | ■ || style="background: #ffecef" | □ || 獅 || style="background: #ffecef" | □ || style="background: pink" | ■ ||    
|-
|   || style="background: pink" | ■ || style="background: #ffecef" | □ || style="background: #ffecef" | □ || style="background: #ffecef" | □ || style="background: pink" | ■ ||    
