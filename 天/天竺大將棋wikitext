|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | {{color|red|燒}} || 火 || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | {{color|red|燒}} || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
|-
|   || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ● || style="background: lightcyan" | ●||    
