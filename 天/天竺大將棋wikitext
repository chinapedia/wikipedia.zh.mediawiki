|   ||   ||   || style="background: lemonchiffon" | ★ ||   ||   ||    
|-
|   ||   || style="background: gainsboro" | ● ||   || style="background: gainsboro" | ● ||   ||    
|-
|   || style="background: lemonchiffon" | ★ ||   || 麒 ||   || style="background: lemonchiffon" | ★ ||    
|-
|   ||   || style="background: gainsboro" | ● ||   || style="background: gainsboro" | ● ||   ||    
|-
|   ||   ||   || style="background: lemonchiffon" | ★ ||   ||   ||    
