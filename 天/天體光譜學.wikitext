  | last = Robertson
  | first = Peter
  | title = Beyond southern skies: radio astronomy and the Parkes telescope
  | publisher = University of Cambridge
  | date = 1992
  | pages = 42, 43
  | url = https://books.google.com/books?id=QgQ-SFKIMdoC&pg=PA42
  | isbn = 0-521-41408-3
