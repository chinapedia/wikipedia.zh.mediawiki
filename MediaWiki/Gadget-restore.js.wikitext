( function( $ ) {
	if ( mw.config.get('wgPageName') != 'Special:Undelete' && mw.config.get('wgPageName') != 'Special:恢复被删页面' ) {
		return;
	}
	
	var invert = function() {
		$( ':checkbox' ).each( function() {
			var el = $( this );
			el.attr( 'checked', !el.attr( 'checked' ) );
		} );
		return false;
	};
	
	var checkAll = function() {
		$( ':checkbox' ).attr( 'checked', true );
		return false;
	};

	$( function() {
		$( '#mw-undelete-submit' ).after( $( '<input type="submit" />' )
			.attr( 'value', wgULS( '全选', '全選' ) )
			.click( checkAll ) );
		$( '#mw-undelete-invert' ).click( invert );
	} );
	
	return true;
} )( jQuery );