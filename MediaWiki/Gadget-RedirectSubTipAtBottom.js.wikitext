/*
  此小工具將標題下的重新定向的提示移至最底部。
*/

(function() {
	var $spanredir = $("span.mw-redirectedfrom");
	if ($spanredir.length <= 0) return;

	switch (mw.config.get("skin")) {

		case "cologneblue":
			$("div#footer-info").prepend($spanredir);
			break;

		case "modern":
		case "monobook":
			$("div#footer ul#f-list").prepend(
				$("<li />").append($spanredir)
			);
			break;

		case "vector":
		case "vector-2022":
			$("div#footer ul#footer-info").prepend(
				$("<li />").append($spanredir)
			);
			break;

	}

})();