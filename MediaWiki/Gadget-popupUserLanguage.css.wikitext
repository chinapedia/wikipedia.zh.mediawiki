li#ca-varlang {
	position:relative;
	cursor: default;
	margin: 0 0 0 1.6em;
	padding: 0 0.8em 0.3em;
	width: 5em;
	border: 1px #aaaaaa solid;
	z-index: 0;
	color: #002bb8;
	background: #f8fcff;
}
#ca-varlang:hover {
	background-color: #f8fcff;
	z-index:3;
}
.ns-0 * li#ca-varlang {
	background: #fbfbfb;
}
.ns-0 * #ca-varlang:hover {
	background-color: white;
}
li#ca-varlang ul {
	position:absolute;
	display:none;
	left:-1px;
	top: 1.2em;
	margin: 0;
	padding:0;
	z-index: 4;
}
#ca-varlang:hover ul {
	display:block;
}
li#ca-varlang li {
	display:list-item;
	list-style: none;
	background: #f8fcff;
	border: 1px #aaaaaa solid;
	margin:0;
	padding: 0;
	width: 8.6em;
}
.ns-0 * li#ca-varlang li {
	background: #fbfbfb;
}
li#ca-varlang li+li {
	margin-top: -1px;
}
li#ca-varlang a {
	background: transparent;
	width: 7em;
	margin: 0px;
	padding:0 0.8em;
	border: none;
	display: block;
}
li#ca-varlang a:hover {
	background: #ffffff;
}
.ns-0 * li#ca-varlang a:hover {
	background: #white;
}