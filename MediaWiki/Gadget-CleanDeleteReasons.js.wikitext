function deletemods(){
	if (mw.config.get('wgAction') == "delete") {
		var wpReason = document.getElementById("wpReason");
		if (!wpReason) return;
		var regexp = /(内容为|page was empty|content before blanking was)/i;
		if (regexp.test(wpReason.value)){
			wpReason.value = "";
		}
	}
}
$(deletemods);