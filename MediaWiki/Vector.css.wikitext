/* 此处的CSS将影响使用Vector皮肤的用户 */

/* T310533 */
.mw-first-heading {
	border-bottom-color: #a2a9b1 !important;
}

.action-view.page-Wikipedia_首页 #contentSub, .action-view.page-Wikipedia_首页 #siteSub, .action-view.page-Wikipedia_首页 .firstHeading, .page-Wikipedia_首页 #deleteconfirm, .page-Wikipedia_首页 #footer-info-lastmod, .page-Wikipedia_首页 #t-cite {
    display: none !important;
}

.page-Wikipedia_首页 #jump-to-nav {
    margin: 0 !important;
}

/* {{tl|Link FA}} */
#mw-panel div.portal div.body ul li.FA {
    margin-left: -10px;
    padding-left: 10px;
    background: url("//upload.wikimedia.org/wikipedia/commons/d/d4/Monobook-bullet-star.png") no-repeat 0% 0%;
}

/* {{tl|Link GA}} */
#mw-panel div.portal div.body ul li.GA {
    margin-left: -10px;
    padding-left: 10px;
    background: url("//upload.wikimedia.org/wikipedia/commons/4/42/Monobook-bullet-ga.png") no-repeat 0% 0%;
}

.badge-goodarticle {
    list-style-image: url("//upload.wikimedia.org/wikipedia/commons/4/42/Monobook-bullet-ga.png");
}

.badge-featuredarticle, .badge-featuredlist {
    list-style-image: url("//upload.wikimedia.org/wikipedia/commons/d/d4/Monobook-bullet-star.png");
}

/* 顯示 "維基百科，自由的百科全書" */
body.ns-0 #siteSub, body.ns-1 #siteSub {
    display: inline;
}

/* The following are Vector bugfixes
 * Temporary fix until [[bugzilla:19567|bugzilla:19567]] is addressed */
#siteNotice div {
    margin: 0;
}

#siteNotice div.expanded table.siteNoticeUser {
    margin-bottom: 1em;
}
/* end of bugfixes */

/* Position coordinates */
#coordinates {
	position: absolute;
	top: -4em;
	right: 0;
	float: right;
	margin: 0;
	padding: 0;
	line-height: 1.5em;
	text-align: right;
	text-indent: 0;
	font-size: 85%;
	text-transform: none;
	white-space: nowrap;
}
.skin-vector-legacy #coordinates {
    top: 0;
}

/* For the new main page design */
#mp-2012-banner {
    /* In default font size, #bodyContent has font-size: 0.8em. */
    /* See also: [[bugzilla:57401|bugzilla:57401]] */
    margin: 0 -1.25em;
    margin: 0 -1rem !important;
}
body.vector-animateLayout #mp-2012-banner {
    -webkit-transition: margin-left 250ms, margin-right 250ms;
    -moz-transition: margin-left 250ms, margin-right 250ms;
    -o-transition: margin-left 250ms, margin-right 250ms;
    transition: margin-left 250ms, margin-right 250ms;
}
@media screen and (min-width: 982px) {
    #mp-2012-banner {
        margin: 0 -1.875em;
        margin: 0 -1.5rem !important;
    }
}

