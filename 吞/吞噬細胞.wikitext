 |title       = Phosphatidylserine receptor is required for clearance of apoptotic cells
 |journal     = Science
 |volume      = 302
 |issue       = 5650
 |pages       = 1560–63
 |date        = 2003-11
 |pmid        = 14645847
 |doi         = 10.1126/science.1087621
 |url         = http://www.sciencemag.org/cgi/content/full/302/5650/1560
 |ref         = harv
 |last2       = Sarkisian
 |last3       = Mehal
 |last4       = Rakic
 |last5       = Flavell
 |accessdate  = 2014-12-19
 |deadurl     = no
