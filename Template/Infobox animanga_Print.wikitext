{{Infobox
|child          = {{{child|<includeonly>yes</includeonly>}}}
|bodystyle      = border-spacing:2px;

|subheader      = {{
    #switch: {{ lc: {{{type}}} }}
    | novel               = 小说
    | serial novel        = 连载小说
    | novel series        = 小说系列
    | light novel         = 轻小说
    | film comic          = 电影漫画
    | other               = 其他书籍
    | #default            = 漫画
  }}
|subheaderstyle = background:#CCF; font-weight:bold;

|headerstyle    = background:#EEF; font-weight:normal; 

|header1  = {{ #if: {{{title<includeonly>|</includeonly>}}} | {{{标题|{{{title}}}}}} }}

|label2   = 作者
|data2    = {{{作者|{{{author<includeonly>|</includeonly>}}}}}}

|label3   = 作画
|data3    = {{ #ifeq: {{{作畫|{{{作画|{{{illustrator}}}}}}}}} | {{{作者|{{{author}}}}}} || {{{作畫|{{{作画|{{{illustrator<includeonly>|</includeonly>}}}}}}}}} }}

|label4   = 出版社
|data4    = {{{出版社|{{{publisher<includeonly>|</includeonly>}}}}}}

|label5   = 中文出版社
|data5    = {{{中文出版社|{{{publisher_zh<includeonly>|</includeonly>}}}}}}

|label6   = 读者群
|data6    = {{{读者群|{{{demographic<includeonly>|</includeonly>}}}}}}

|label7   = 版权
|data7    = {{{版權|{{{版权|{{{imprint<includeonly>|</includeonly>}}}}}}}}}

|label8   = 连载杂志
|data8    = {{
    #switch: {{ lc: {{{type}}} }}
    | novel    = 
    | #default = {{ #if: {{{連載雜誌|{{{連載於|{{{連載|{{{magazine<includeonly>|</includeonly>}}}}}}}}}}}} | {{{連載雜誌|{{{連載於|{{{連載|{{{magazine}}}}}}}}}}}} }}
  }}

|label9   = 中文杂志
|data9    = {{
    #switch: {{ lc: {{{type}}} }}
    | novel    = 
    | #default = {{ #if: {{{中文杂志|{{{magazine_zh<includeonly>|</includeonly>}}}}}} | {{{中文杂志|{{{magazine_zh}}}}}} }}
  }}

|label10  = {{
    #switch: {{ lc: {{{type}}} }}
    | novel    = 发行
    | #default = {{ #if: {{{發售日|{{{published|}}}}}} | 发行 | 连载时间 }}
  }}
|data10   = {{
    #switch: {{ lc: {{{type}}} }}
    | novel    = {{{發售日|{{{published|}}}}}}
    | #default = {{
      #if: {{{發售日|{{{published|}}}}}} | {{{發售日|{{{published}}}}}} | {{
        #if: {{{開始|{{{first<includeonly>|</includeonly>}}}}}} | {{nowrap|{{{開始|{{{first}}}}}}}}－{{
          #if: {{{結束|{{{last<includeonly>|</includeonly>}}}}}} | {{nowrap|{{{結束|{{{last}}}}}}}} | 连载中
        }}
      }}
    }}
  }}

|label11  = 册数
|data11   = {{
    #switch: {{ lc: {{{type}}} }}
    | novel    =
    | #default = {{
      #if: {{{冊數|{{{巻数|{{{volumes<includeonly>|</includeonly>}}}}}}}}} | {{{冊數|{{{巻数|{{{volumes}}}}}}}}} {{
        #if: {{{volume_list<includeonly>|</includeonly>}}}{{{chapter_list|}}} |<span class="noprint">（[[{{{volume_list|{{{chapter_list<noinclude>|List of volumes</noinclude>}}}}}}|话数列表]]）</span>
      }}
    }}
  }}
}}<includeonly>{{ <!-- Unknown parameters check -->
  #invoke:Check for unknown parameters|check
  | unknown = [[Category:Anime and manga articles using obsolete and incorrect infobox parameters|_VALUE_{{PAGENAME}}]]
  | child
  | type | title
  | author | illustrator
  | publisher | publisher_zh | imprint
  | magazine | magazine_zh
  | demographic
  | first | last | published
  | volumes | volume_list | chapter_list
}}</includeonly><noinclude>
{{Documentation}}
</noinclude>