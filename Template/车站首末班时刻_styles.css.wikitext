.station-infobox-timetable {
  margin: 0.5em auto;
  font-size: 95%;
  min-width: 25em;
  max-width: 50em;
  text-align: center;
  clear: both;
}

.station-infobox-timetable th,
.station-infobox-timetable td {
  vertical-align: middle;
}

.station-infobox-timetable .bar {
  width: 1px;
  min-width: 1px;
}

.station-infobox-timetable .major {
  max-width: 6em;
}

.station-infobox-timetable .minor {
  font-size: smaller;
  max-width: 7em;
}

.station-infobox-timetable .note {
  font-style: italic;
  font-size: smaller;
}