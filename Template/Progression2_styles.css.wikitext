.progression {
    width: 50%;
    margin: 0 auto;
    background: transparent;
}

.progression-header {
    text-align: center;
}

.progression-header>span {
    font-size: 120%;
    font-weight: bold;
}

.progression-bar {
    border: 1px solid #c8ccd1;
    height: 10px;
    width: 100%;
    border-spacing: 1px;
}

.progression-footer {
    line-height: .8em;
    text-align: center;
    font-size: 70%;
}

.progression-done {
    background: #00af32;
}

.progression-undone {
    background: #eaecf0;
}