{{Infobox
| bodyclass  = vcard
| aboveclass = fn
| above = {{{name|<includeonly>{{PAGENAMEBASE}}</includeonly>}}}
| title = {{#ifeq:{{lc:{{{embed|}}}}}|yes|'''拳击生涯'''}}
| child = {{lc:{{{embed|}}}}}

| image      = {{#invoke:InfoboxImage|InfoboxImage|image={{{image|}}}|size={{{image_size|{{{imagesize|}}}}}}|border={{{image_border|}}}|sizedefault=frameless|upright=1|alt={{{alt|}}}|suppressplaceholder=yes}}
| caption    = {{{caption|}}}

| labelstyle = white-space: nowrap;

| header1    = {{#if:{{{realname|}}}{{{nickname|}}}{{{weight|}}}{{{height|}}}{{{reach|}}}{{{nationality|}}}{{{birth_date|}}}{{{birth_place|}}}{{{death_date|}}}{{{death_place|}}}{{{style|}}}|个人资料}}

| label2     = 本名
| data2      = {{{realname|}}}
| label3 = 羅馬拼音
| data3 = {{{罗马拼音|{{{羅馬拼音|{{{romaji|{{{romanizedname|}}}}}}}}}}}}
| label4     = 昵称
| class4     = nickname
| data4      = {{{nickname|}}}
| label5    = 级别
| data5      = {{#if:{{{weight|}}}|{{infobox person/weight|{{{weight}}}}}}}
| label6     = 身高
| data6      = {{#if:{{{height|}}}|{{infobox person/height|{{{height}}}}}}}
| label7     = 臂展
| data7      = {{#if:{{{reach|}}}|{{infobox person/length|{{{reach}}}}}}}
| label8     = 国籍
| data8      = {{{nationality|}}}
| label9     = 出生
| data9      = {{br separated entries|{{{birth_name|}}}|{{{birth_date|}}}|{{{birth_place|}}} }} 
| label10     = 逝世
| data10      = {{br separated entries|{{{death_date|}}}|{{{death_place|}}} }} 
| label11    = 站位
| data11     = {{{style|}}}

