table.horizontally-centered, table.all-styles {
    margin: auto;
}

table.small, table.all-styles {
    font-size: small;
}

table.centered-text, table.all-styles {
    text-align: center;
}

table.hoverable tr:hover, table.all-styles tr:hover {
    background-color: #dcdfe6;
}

table caption {
    caption-side: bottom;
}

table .normal {
    font-weight: normal;
}