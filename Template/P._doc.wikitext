 | <code>{{tl|p.|2}}</code>        | {{p.|2}}
 | <code>{{tl|pp.|2|4}}</code>     | {{pp.|2|4}}
 | <code>{{tl|p.|2|4}}</code>      | {{p.|2|4}}
 | <code>{{tl|pp.|2}}</code>       | {{pp.|2}}
 | <code>{{tl|pp.|2|ff.}}</code>   | {{pp.|2|ff.}}
 | <code>{{tl|pp.|2|ff}}</code>    | {{pp.|2|ff}}
 | <code>{{tl|pp.|2|4|ff.}}</code> | {{pp.|2|4|ff.}}
 | <code>{{tl|p.}}</code>          | {{p.}}
}}

