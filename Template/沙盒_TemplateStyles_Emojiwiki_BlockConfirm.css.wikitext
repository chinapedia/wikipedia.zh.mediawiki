.bcb{
    position:relative;
    left:0;
    animation-name:bc;
    animation-duration:2s;
    animation-iteration-count:infinite;
    animation-play-state:running;
}

.bcb:hover{
    animation-play-state:paused;
}

@keyframes bc{
    0%{
        left:0;
    }
    50%{
    	left:90%;
    }
    100%{
        left:0;
    }
}