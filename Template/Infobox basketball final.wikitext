<includeonly>{{infobox
| bodystyle = width:300px; font-size:90%;
| titlestyle = margin-left:inherit; font-size:medium;
| title = {{#if:{{{name|}}}|{{{name|}}}|{{{year}}}年{{{league|}}}{{#if:{{{final_name|}}}|{{{final_name|}}}|總決賽}}}}
| image = {{#invoke:InfoboxImage|InfoboxImage|image={{{image|}}}|size={{{image_size|}}}|alt={{{image_alt|}}}}}
| caption = {{{caption|}}}

| data1 =
<table style="width:100%; background:transparent; text-align:center;">
<tr><th>隊伍</th><th>教練</th><th>勝場數</th></tr>
<tr class="vcard" style="{{#ifexpr:{{#if:{{{champion|}}}|1|{{if empty|{{{team_A_games|}}}|0}} > {{if empty|{{{team_B_games|}}}|0}} }}|font-weight:bold;}}">
<td class="fn org" style="text-align:left;">{{{team_A|{{{champion}}}}}}</td>
<td class="agent">{{{team_A_coach|{{{champion_coach}}}}}}</td>
<td>{{{team_A_games|{{{champion_games}}}}}}</td>
</tr>
<tr class="vcard" style="{{#ifexpr:{{#if:{{{champion|}}}|0|{{if empty|{{{team_B_games|}}}|0}} > {{if empty|{{{team_A_games|}}}|0}} }}|font-weight:bold;}}">
<td class="fn org" style="text-align:left;">{{{team_B|{{{runnerup}}}}}}</td>
<td class="agent">{{{team_B_coach|{{{runnerup_coach}}}}}}</td>
<td>{{{team_B_games|{{{runnerup_games}}}}}}</td>
</tr></table>

| label2 = 日期
| data2 = {{{dates|{{{date|}}}}}}

| label3 = {{#switch: {{{league|}}}|
| NBA = [[NBA总决赛最有价值球员|MVP]]
| #default = {{#if:{{{MVP_name|}}}|[[{{{MVP_name|}}}|MVP]]|MVP}}
}}
| data3 = {{{MVP|}}}
| label10 = [[奈史密斯篮球名人纪念堂|名人堂]]
| data10 = {{{HOFers|}}}

| label11 ={{#switch: {{{league}}}|
| NBA = [[東部聯盟 (NBA)|東區決賽]]
| #default = 東區決賽
}}
| data11 = {{{ECF result|}}}

| label12 = {{#switch: {{{league}}}|
| NBA = [[西部聯盟 (NBA)|西區決賽]]
| #default = 西區決賽
}}
| data12 = {{{WCF result|}}}

| belowclass = noprint
| belowstyle = border-top:#bbb solid 1px
