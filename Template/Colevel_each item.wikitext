<includeonly>{{#ifexpr: {{{item}}} <= {{{itemsinfullcolumns}}}
       |{{colevel/process item
           |rows={{{rows}}}
           |itemmodrows={{#expr: {{{item}}} mod {{{rows}}} }}
           |columns={{{columns}}}
           |alpha={{{alpha|}}} |beta={{{beta|}}}
           |alphawidth={{{alphawidth}}}
        }}
       |{{colevel/process item
          |rows={{#expr: {{{rows}}} - 1 }}
          |itemmodrows={{#expr: ({{{item}}} - {{{itemsinfullcolumns}}}) mod ({{{rows}}} - 1) }}
          |columns={{{columns}}}
          |alpha={{{alpha|}}} |beta={{{beta|}}}
          |alphawidth={{{alphawidth}}}
        }}
}}</includeonly>