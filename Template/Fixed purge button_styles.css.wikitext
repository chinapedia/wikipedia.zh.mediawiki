.fpb {
    position: fixed;
    right: 25px;
    bottom: 25px;
    width: 50px;
    height: 50px;
    background-color: rgba(0, 0, 0, 0.5);
    border: none;
    border-radius: 10px;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    z-index: 999;
}

.fpb > a > .icon {
    width: 100%;
    height: 100%;
    /* File:OOjs UI icon reload.svg: https://commons.wikimedia.org/wiki/File:OOjs_UI_icon_reload.svg */
    background-image: url(https://upload.wikimedia.org/wikipedia/commons/1/17/OOjs_UI_icon_reload.svg);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 35px 35px;
    filter: invert(1);
}