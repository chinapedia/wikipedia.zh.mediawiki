 |access-date = 2011年8月31日
 |archive-url = https://web.archive.org/web/20160304190059/http://www.metroradio.com.hk/997/News/Default.aspx?NewsID=e428e179-ec08-4cc2-a5a7-7fb36dac627d
 |archive-date = 2016年3月4日
